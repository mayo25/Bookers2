<div>
  <%= attachment_image_tag @book, :image %>
  <p>本のタイトル：<%= @book.book_title %></p>
  <p>説明：<%= @book.opinion %></p>
  <p>ユーザーネーム：<%= @book.user.name %></p>
  <p>投稿日時：<%= @book.created_at.strftime('%Y/%m/%d') %></p>
</div>

 <% if @post_image.user == current_user %>
    <%= link_to "destroy", book_path(@book), method: :delete %>
  <% end %>